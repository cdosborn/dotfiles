# Emulate 256 color mode
term    screen-256color

startup_message off

# Enable the alternate window
altscreen on

# Screen treats this as a login shell 
defshell -bash

# lines of scrollback!
defscrollback 4096

hardstatus ignore
#caption splitonly '%{=u dd} '
caption always ' %H  %?%-w%?%{-}%?%{+b R}&%{-} %t%:%{+b R}&%{-}-%?%+w %?%{-}%= %{-}%{-}%1` %{= kk}'
