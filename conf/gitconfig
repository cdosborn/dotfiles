[user]
	name = Connor Osborn
	email = cdosborn@email.arizona.edu
[core]
	editor = vim
[push]
	default = simple
[alias]
	co = checkout
        br = branch --sort=committerdate
        ca = diff --cached
        bname = rev-parse --abbrev-ref HEAD
        re = remote -v
	edit = !$EDITOR -o `git ls-files --modified | sort -u`
        fixup = commit --amend -C @
        diffls = diff --name-only
        index = ls-files --stage
        applydiff= "!{ echo 'cat <<DIFF | git apply'; git diff; echo 'DIFF'; }"
        pull = pull --ff-only
        lg = log --oneline
        head = rev-parse @

        # Get all files changed in a commit (d)iff(c)ommit
        dc = diff-tree --no-commit-id --name-only -r
[mergetool]
	tool = vimdiff
[color]
	ui = auto
