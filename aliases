# Git
alias gb='git branch --sort=committerdate'
alias gl='git log'
alias gs='git status'
alias gca='git commit -am'
alias grc='git rebase --continue'

alias grep='grep --color'

# head that only outputs the  number of lines available in your terminal, this
# is slightly verbose, because it handles the case where your terminal window
# is very tiny
alias headfit='head -n $(( n=$(($(tput lines) - 2)), n < 0 ? 0 : n))'

# Copy/paste for tmux
alias tpbcopy='tmux loadb -'
alias tpbpaste='tmux saveb -'

alias bin='xxd -pb'
alias hs='ghci'
alias kwmr='launchctl stop homebrew.mxcl.kwm;launchctl start homebrew.mxcl.kwm'
alias khdr='launchctl stop homebrew.mxcl.khd;launchctl start homebrew.mxcl.khd'
alias ll='ls -lhA'
alias myip='curl http://ipecho.net/plain; echo'
alias paux='ps aux | grep'
alias r='echo $(base64 < /dev/urandom | head -c 10)'

# execute '<last command> |  less'
alias l='bash -c "$(history | tail -2 | head -1 | cut -sd " " -f 4-)" | less'
